            assert loaded_config.audio_sample_rate == custom_config_data.get("audio_sample_rate", 16000)
            assert loaded_config.stt_provider == custom_config_data.get("stt_provider", "openai")

        finally:
            if os.path.exists(temp_path):
                os.remove(temp_path)

