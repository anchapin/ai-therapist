# AI Therapist Configuration
OPENAI_API_KEY=your_openai_api_key_here
KNOWLEDGE_PATH=./knowledge
VECTORSTORE_PATH=./vectorstore
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=llama3.2:latest
OLLAMA_EMBEDDING_MODEL=nomic-embed-text:latest

# Voice Feature Configuration
VOICE_ENABLED=true
VOICE_INPUT_ENABLED=true
VOICE_OUTPUT_ENABLED=true
VOICE_COMMANDS_ENABLED=true

# Audio Processing Settings
AUDIO_SAMPLE_RATE=16000
AUDIO_CHANNELS=1
AUDIO_CHUNK_SIZE=1024
AUDIO_FORMAT=wav
AUDIO_INPUT_DEVICE=0
AUDIO_OUTPUT_DEVICE=0
NOISE_REDUCTION_ENABLED=true
VAD_ENABLED=true
VAD_AGGRESSIVENESS=2
SILENCE_THRESHOLD=0.3
SILENCE_DURATION_MS=1000

# OpenAI Whisper API Configuration (Primary STT Provider)
OPENAI_WHISPER_MODEL=whisper-1
OPENAI_WHISPER_LANGUAGE=en
OPENAI_WHISPER_TEMPERATURE=0.0

# OpenAI TTS Configuration (Primary TTS Provider)
OPENAI_TTS_MODEL=tts-1
OPENAI_TTS_VOICE=alloy
OPENAI_TTS_SPEED=1.0
OPENAI_TTS_LANGUAGE=en-US

# ElevenLabs TTS Configuration (Premium Alternative)
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here
ELEVENLABS_VOICE_ID=your_preferred_voice_id_here
ELEVENLABS_MODEL=eleven_flash_v2_5
ELEVENLABS_VOICE_SPEED=1.0
ELEVENLABS_VOICE_STABILITY=0.5
ELEVENLABS_VOICE_SIMILARITY_BOOST=0.8
ELEVENLABS_VOICE_STYLE=0.0

# Google Cloud Speech-to-Text Configuration
GOOGLE_CLOUD_CREDENTIALS_PATH=./credentials/google-cloud-credentials.json
GOOGLE_CLOUD_PROJECT_ID=your_google_cloud_project_id
GOOGLE_SPEECH_LANGUAGE_CODE=en-US
GOOGLE_SPEECH_MODEL=latest_long
GOOGLE_SPEECH_ENABLE_AUTOMATIC_PUNCTUATION=true
GOOGLE_SPEECH_ENABLE_WORD_TIME_OFFSETS=true
GOOGLE_SPEECH_MAX_ALTERNATIVES=1

# Whisper Local Processing Configuration
WHISPER_MODEL=base
WHISPER_LANGUAGE=en
WHISPER_TEMPERATURE=0.0
WHISPER_BEAM_SIZE=5
WHISPER_BEST_OF=5

# Piper TTS Local Configuration
PIPER_TTS_MODEL_PATH=./models/piper/voices/en_US-lessac-medium.onnx
PIPER_TTS_SPEAKER_ID=0
PIPER_TTS_NOISE_SCALE=0.667
PIPER_TTS_LENGTH_SCALE=1.0
PIPER_TTS_NOISE_W=0.8

# Voice Profile Configuration
VOICE_PROFILE_PATH=./voice_profiles
DEFAULT_VOICE_PROFILE=calm_therapist
VOICE_CUSTOMIZATION_ENABLED=true
VOICE_PITCH_ADJUSTMENT=1.0
VOICE_SPEED_ADJUSTMENT=1.0
VOICE_VOLUME_ADJUSTMENT=1.0

# Voice Commands Configuration
VOICE_COMMAND_WAKE_WORD="therapist"
VOICE_COMMAND_TIMEOUT=5000
VOICE_COMMAND_MAX_DURATION=10000
VOICE_COMMAND_MIN_CONFIDENCE=0.7
VOICE_COMMAND_DEBUG_MODE=false

# Security & Privacy Settings
VOICE_ENCRYPTION_ENABLED=true
VOICE_DATA_RETENTION_HOURS=24
VOICE_CONSENT_REQUIRED=true
VOICE_TRANSCRIPT_STORAGE=false
VOICE_ANONYMIZATION_ENABLED=true
VOICE_PRIVACY_MODE=true
# Authentication & Session Management
JWT_SECRET_KEY=your_jwt_secret_key_here_change_in_production
JWT_EXPIRATION_HOURS=24
SESSION_TIMEOUT_MINUTES=30
MAX_CONCURRENT_SESSIONS=5
AUTH_DATA_DIR=./auth_data

# User Account Security
MAX_LOGIN_ATTEMPTS=3
ACCOUNT_LOCK_DURATION_MINUTES=30
PASSWORD_RESET_TOKEN_EXPIRY_HOURS=24

# Database Configuration
DATABASE_PATH=./data/ai_therapist.db
DB_MAX_CONNECTIONS=10
DATABASE_CONNECTION_TIMEOUT=30
DB_MAX_RETRIES=3
DB_RETRY_DELAY=1.0

# Performance Optimization
VOICE_CACHE_ENABLED=true
VOICE_CACHE_SIZE=100
VOICE_STREAMING_ENABLED=true
VOICE_PARALLEL_PROCESSING=true
VOICE_BUFFER_SIZE=4096
VOICE_PROCESSING_TIMEOUT=30000

# Logging & Monitoring
VOICE_LOGGING_ENABLED=true
VOICE_LOG_LEVEL=INFO
VOICE_METRICS_ENABLED=true
VOICE_ERROR_REPORTING=true
VOICE_PERFORMANCE_MONITORING=true

# Compliance & Legal
VOICE_HIPAA_COMPLIANCE_ENABLED=true
VOICE_GDPR_COMPLIANCE_ENABLED=true
VOICE_DATA_LOCALIZATION=true
VOICE_CONSENT_RECORDING=true
VOICE_EMERGENCY_PROTOCOLS_ENABLED=true